<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/pengingat">

        <SwitchPreference
            app:key="@string/pref_key_notify"
            app:summary="@string/notif_title"
            app:title="@string/pref_notify_name"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/dark_mode">

        <ListPreference
            app:defaultValue="@string/pref_dark_auto"
            app:entries="@array/dark_mode"
            app:entryValues="@array/dark_mode_value"
            app:key="@string/pref_key_dark"
            app:title="@string/pref_dark_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>