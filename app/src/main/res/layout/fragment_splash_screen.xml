<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreenFragment">

    <ImageView
        android:id="@+id/iv_logo_devacademy"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="Dev Academy"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_logo_devacademy"
        app:layout_constraintStart_toStartOf="@+id/iv_logo_devacademy"
        app:layout_constraintTop_toBottomOf="@+id/iv_logo_devacademy" />

</androidx.constraintlayout.widget.ConstraintLayout>